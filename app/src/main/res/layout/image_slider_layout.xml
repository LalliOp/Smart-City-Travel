<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/placeImg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/ic_launcher"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/txtStyleLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/placeImg"
        android:background="@drawable/black_background_gradient">

        <TextView
            android:id="@+id/placeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="PLACE"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/placeRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/placeName"
            android:layout_alignStart="@id/placeName"
            android:numStars="5"
            android:rating="3.5"
            android:theme="@style/RatingBarColor" />

    </RelativeLayout>
</RelativeLayout>